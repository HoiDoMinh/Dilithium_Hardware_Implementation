
module tb_randombytes;
    logic clk, rst_n, start;
    logic [255:0] zeta_out;
    logic random_done;

    randombytes uut (
        .clk(clk),
        .rst_n(rst_n),
        .start(start),
        .zeta_out(zeta_out),
        .random_done(random_done)
    );

    always #5 clk = ~clk;

    initial begin
        clk = 0; rst_n = 0; start = 0;
        #20 rst_n = 1;
        #20 start = 1;
        #10 start = 0;
        wait(random_done);
        $display("Random output = %h", zeta_out);
        #100 $finish;
    end
endmodule
